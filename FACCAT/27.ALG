Algoritmo "27"

Var
valor:inteiro

Inicio
escreva("Digite um valor: ")
   leia(valor)

   escreval(" ")

   se valor=0 entao
      escreval("Esse número é zero.")
   senao
      se valor<0 entao
         escreval("Esse número é negativo.")
      senao
         escreval("Esse número é positivo.")
      fimse
   fimse

Fimalgoritmo